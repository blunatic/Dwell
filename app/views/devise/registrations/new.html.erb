
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div><%= f.label :first_name %><br />
  <%= f.text_field :first_name, autofocus: true %></div>

  <div><%= f.label :last_name %><br />
  <%= f.text_field :last_name, autofocus: true %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true %></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

  <!-- Add logic for "Join Household OR Create New Household" here -->
  <div><%= f.label :household_name %><br />
  <%= f.text_field :household_name, autofocus: true %></div>

  <div><%= f.label :household_password %><br />
  <%= f.password_field :household_password, autofocus: true %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>
</div>

<%= render "devise/shared/links" %>
